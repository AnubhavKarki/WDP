    <div class="delete-form-container">
        <h4 class="aiimage-text">AIImage</h4>

        <hr>

        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Prompt)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Prompt)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ImageGenerator)</dt>
